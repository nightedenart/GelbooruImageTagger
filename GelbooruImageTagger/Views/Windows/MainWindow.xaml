<Window x:Class="GelbooruImageTagger.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GelbooruImageTagger.Views.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Top" Margin="8">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Add"/>
                    <Button Content="Clear"/>
                    <Separator/>
                    <Button Content="Tag"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <ToggleButton Content="Show Preview" ToolTip="Show Preview"/>
                    <Button Content="Settings" ToolTip="Settings"/>
                </StackPanel>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0">
                    <ListView>

                    </ListView>
                </Border>
                <Border Grid.Column="1" Margin="8,0,0,0" Width="256">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <VirtualizingStackPanel>
                            
                        </VirtualizingStackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
